@{
    ViewData["Title"] = "Delete";
}
@model movieEntry
<h2>Confirm Deletion</h2>
<h3>Are you sure that you want to delete the record for @Model.title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Yes</button>
    <input type="hidden" asp-for="movieID" />
    <a class="btn btn-primary" asp-controller="Home" asp-action="movieTable">Cancel</a>
</form>
@model MissionFour.Models.movieEntry

<div>
    <h1>Add Movies Here</h1>
    <p>All * categories are required.</p>
</div>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="category">Movie Category*</label>
        <select asp-for="categoryID">
            <option value="">Select a category</option>
            @foreach (mCat mklst in ViewBag.Cate)
            {
                <option value="@mklst.categoryID">@mklst.categoryName</option>
            }
        </select>
        <br />
        <label asp-for="title">Movie Title*</label>
        <input asp-for="title" /><br />
        <label asp-for="year">Release Year*</label>
        <input asp-for="year" /><br />
        <label asp-for="director">Director*</label>
        <input asp-for="director" /><br />
        <label asp-for="rating">Rating*</label>
        <select asp-for="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <label asp-for="edited">Edited</label>
        <select asp-for="edited">
            <option value="false"></option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />
        <label asp-for="lentTo">Lent to</label>
        <input asp-for="lentTo"/><br />
        <label asp-for="notes">Notes (Limited to 25 characters)</label>
        <input asp-for="notes" /><br />
        <button type="submit">Submit</button>
    </form>
</div>